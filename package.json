{
    "name": "micro-saas",
    "version": "1.0.0",
    "scripts": {
      "install-client": "npm install --prefix micro-saas-app",
      "build-client": "npm run build --prefix micro-saas-app",
      "start": "npm run server && npm run client",
      "dev": "concurrently \"npm run dev --prefix backend\" \"npm run dev --prefix micro-saas-app\"",
      "server": "nodemon backend/server.js",
      "client": "npm start --prefix micro-saas-app",
      "heroku-postbuild": "npm install --prefix micro-saas-app && npm run build --prefix micro-saas-app"
    },
    "dependencies": {
      "concurrently": "^7.2.1",
      "express": "^5.1.0",
      "cors": "^2.8.5",
      "mongoose": "^8.13.2",
      "jsonwebtoken": "^9.0.2",
      "dotenv": "^16.5.0",
      "axios": "^1.8.4",
      "chart.js": "^4.4.8",
      "lucide-react": "^0.487.0",
      "qrcode.react": "^1.0.0",
      "react-chartjs-2": "^5.3.0",
      "recharts": "^2.15.2",
      "react-redux": "^9.2.0",
      "react-router-dom": "^7.5.0"
    },
    "devDependencies": {
      "nodemon": "^3.1.9",
      "vite": "^4.0.0"
    }
  }
  